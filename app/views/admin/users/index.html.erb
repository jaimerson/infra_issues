<h1>Funcionários</h1>
<% if @users.any? %>
  <table>
    <thead>
      <th>Email</th>
      <th>Criado em</th>
      <th>Ações</th>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.email, admin_user_path(user) %>
        </td>
        <td>
          <%= I18n.l(user.created_at, format: :short) %>
        </td>
        <td>
          <%= link_to 'Editar', edit_admin_user_path(user) %>
          <%= button_to 'Excluir', admin_user_path(user), method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>Nenhum funcionário cadastrado.</p>
<% end %>

<%= link_to "Cadastrar Usuário", new_admin_user_path %>
